<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
		    <!--
		        checked and pressed state  
		      -->
			<item android:state_pressed="true" >
			    <shape android:shape="rectangle">
			        <stroke android:width="1dip" android:color="@color/light_grey" />
			        <gradient  android:angle="270"  android:startColor="@color/mockbtn_yellow_dark" android:endColor="@color/mockbtn_yellow_light" />
			       	<corners
			        android:radius="20dp"
			         />
			    </shape>    
			</item>
	
			<!--
	        checked and no pressed state  
	     	 -->
			<item android:state_pressed="false">
				<shape android:shape="rectangle"> 
				        <stroke android:width="1dip" android:color="@color/light_grey" />
				        <gradient  android:angle="-90"  android:startColor="@color/mockbtn_yellow_light" android:endColor="@color/mockbtn_yellow_dark" />
				       	<corners
				        android:radius="20dp"
				         />
				</shape>  
			</item>
</selector>
